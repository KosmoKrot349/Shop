@model kr.Models.MyIndexViewModel
@{
    ViewBag.Title = "Главная";
}
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {

        <div style="height:15%" >
            @if (!String.IsNullOrEmpty(Model.selectname))
            {<input class="form-control"  type="text" name="product" style="width: 15%;height:5%; border: 1px solid; position: absolute; left: 30%" value="@Model.selectname">}

            else
            { <input type="text" placeholder="Поиск" class="form-control" style="height: 5%; width: 15%; border: 1px solid; position: absolute; left: 30%" name="product">}
        <select style="border:1px solid;position:absolute;left:45%;width:15%;height:5%;"  name="category" class="form-control">
            @foreach (var item in Model.categories)
            {
                if (!String.IsNullOrEmpty(Model.selectcategory) && Model.selectcategory == item.title)
                {
                    <option selected>@item.title</option>
                }
                else
                {
                    <option>@item.title</option>
                }
            }
        </select>
            <input type="submit" class="btn-group" style="position: absolute; height:5%;left:60%;" value="Найти">
        </div>

    }
<br>
<br>
    <div style="display: flex;justify-content: space-around;flex-wrap: wrap;width: 100%;">
        @foreach (var item in Model.products)
        {
            <div style="display:inline-block;margin:0;padding: 0;width:300px; height:300px;">
                <img src="@item.img" style="width:70%;height:70%">
                <div>Название:@item.title</div>
                <div>Описание:@item.desc</div>
               <a href="/Home/Buy/@item.Id"><div  style="border-radius:5px; background-color:lightskyblue;text-align:center;color:black; width:30%;">Купить</div></a>

            </div>
        }

    </div>
